extends layout

block content
    div
        form(class="form-signin col-3 container mt-5" method="POST" action="login")

            - var h1Classes = ['h3', 'mb-5', 'font-weight-normal text-center']
            h1(class=h1Classes) Log In

            #error
                if error
                    p.text-danger=message

            //-input email
            label( for="inputEmail" class="sr-only") Email address
            input(type="email" name="email" id="inputEmail" class="form-control mb-2" placeholder="Email address" required autofocus)

            //-input password
            label(for="inputPassword" class="sr-only") Password
            input(type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required)

            //-signIn button
            - var buttonClass=['btn', 'mt-3', 'btn-primary', 'btn-block'];
            button(class=buttonClass type="submit") Sign in

            a(href='/api/user/signup' class="mt-2 text-center") No account yet? Register